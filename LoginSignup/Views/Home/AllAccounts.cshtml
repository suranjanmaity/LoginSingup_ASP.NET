@model IEnumerable<LoginSignup.Models.AccountModel>

@{
    ViewData["Title"] = "All Accounts";
}
<div class="overflow-scroll custom-bg-gray custom-shadow">
<h1>
    All Accounts
</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Music
                </th>
                <th>
                    Sports
                </th>
                <th>
                    Travel
                </th>
                <th>
                    Movies
                </th>
                <th>
                    Source Of Income
                </th>
                <th>
                    Income
                </th>
                <th>
                    Age
                </th>
                <th>
                    Bio
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Music)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sports)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Travel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movies)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SourceOfIncome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Income)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bio)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>