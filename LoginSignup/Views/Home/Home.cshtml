@model LoginSignup.Models.AccountModel
@{
    ViewData["Title"] = "Home";
}
<div class="custom-shadow d-flex flex-column align-self-center w-50 w md rounded-3 align-items-center justify-content-center p-2 bg-light">
    <h3 class="text-primary p-2 px-4">Welcome, @Model.FirstName @Model.LastName</h3>
    <hr />
   
    <div>
        <a asp-controller="Home" asp-action="MyDetails" class="btn btn-primary m-1">
            <i class="bi bi-person-circle"></i>
            My Account
        </a>
        <a asp-controller="Home" asp-action="AllAccounts" class="btn btn-secondary m-1">
            <i class="bi bi-people-fill"></i>
            All Accounts
        </a>
        @* <a asp-controller="Login" asp-action="Logout" class="btn btn-danger m-1">
            <i class="bi bi-box-arrow-right"></i>
            Log Out
        </a> *@
    </div>
</div>
