@model AccountModel
@{
    if (TempData["id"] != null){
    }

    ViewData["Title"] = "Edit";
}
<style>
    input[type="range"]::-webkit-slider-thumb {
    background-color: #0d6efd;
}
</style>
<!-- Modal -->
<div class="modal fade" id="id_@Model.Id" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form method="post" asp-controller="Home" asp-action="UpdatePartial"
                        class="w-100 d-flex flex-column gap-1">
                    @* <div asp-validation-summary="All" class="w-100 align-self-start"></div> *@
                    <input asp-for="Id" hidden="hidden">
                    <div class="d-flex gap-3">
                        <div class="w-100">
                            <div>
                                <label class="fw-500 text-primary" asp-for="FirstName"></label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <input asp-for="FirstName" class="form-control" placeholder="enter your first name">
                        </div>
                        <div class="w-100">
                            <div>
                                <label class="fw-500 text-primary" asp-for="LastName"></label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <input asp-for="LastName" class="form-control" placeholder="enter your last name">
                        </div>
                    </div>
                    <div>
                        <label class="fw-500 text-primary" asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <input asp-for="Email" type="email" class="form-control" placeholder="enter your email">

                    <div class="d-flex gap-3">
                        <div class="w-100">
                            <div>
                                <label class="fw-500 text-primary">Old Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <input asp-for="Password" type="password" class="form-control" placeholder="enter your password">
                        </div>
                        <div class="w-100">
                            <div>
                                <label class="fw-500 text-primary">New Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="enter new password">
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <div class="w-100">
                            <div>
                                <label class="fw-500 text-primary" asp-for="Gender"></label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="d-flex gap-3">
                                <div class="form-check">
                                    <input type="radio" asp-for="Gender" value="Male" class="form-check-input">
                                    <label class="form-check-label">
                                        Male
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" asp-for="Gender" value="Female" class="form-check-input">
                                    <label class="form-check-label">
                                        Female
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="w-100">
                            <label class="fw-500 text-primary d-flex flex-row">Hobbies</label>
                            <div class="d-flex gap-3">
                                <div class="d-flex">
                                    <input type="checkbox" asp-for="Music" class="form-check">
                                    <label asp-for="Music" class="form-check-label"></label>
                                </div>
                                <div class="d-flex">
                                    <input type="checkbox" asp-for="Sports" class="form-check">
                                    <label asp-for="Sports" class="form-check-label"></label>
                                </div>
                                <div class="d-flex">
                                    <input type="checkbox" asp-for="Travel" class="form-check">
                                    <label asp-for="Travel" class="form-check-label"></label>
                                </div>
                                <div class="d-flex">
                                    <input type="checkbox" asp-for="Movies" class="form-check">
                                    <label asp-for="Movies" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <div class="w-100">
                            <label class="fw-500 text-primary" asp-for="SourceOfIncome"></label>
                            <select asp-for="SourceOfIncome" class="form-control" asp-items="Html.GetEnumSelectList<SourceOfIncome>()"></select>
                        </div>
                        <div class="w-100 d-flex justify-content-center gap-2">
                            <div class="w-100">
                                <label class="fw-500 text-primary" asp-for="Income"></label>
                                <input type="range" value="20000" min="20000" max="100000" step="1000" asp-for="Income" class="form-control" id="sal-range_@Model.Id">
                            </div>
                            <div class="w-15 bg-primary text-light h-50 rounded-3 p-1" id="sal-value_@Model.Id">
                                20K
                            </div>
                        </div>
                    </div>
                    <div class="d-flex gap-3">
                        <div class="w-100">
                            <label class="fw-500 text-primary">Upload Profile Picture</label>
                            <input type="file">
                        </div>
                        <div class="w-100">
                            <div>
                                <label class="fw-500 text-primary" asp-for="Age"></label>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                            <input asp-for="Age" class="form-control">
                        </div>
                    </div>
                    <label class="fw-500 text-primary" asp-for="Bio"></label>
                    <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#id_@Model.Id">Close</button>
                        <button class="btn btn-primary" type="submit">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $('#sal-range_@Model.Id').change(function () {
        let sal_value = parseInt($('#sal-range_@Model.Id').val()) / 1000;
        sal_value = sal_value + "K";
        $('#sal-value_@Model.Id').text(sal_value);
    });
</script>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}